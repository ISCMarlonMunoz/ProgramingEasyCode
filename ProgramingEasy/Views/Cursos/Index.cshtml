@model IEnumerable<ProgramingEasy.Models.Cursos>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lenguaje_programacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lenguaje_programacion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_curso">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id_curso">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_curso">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
