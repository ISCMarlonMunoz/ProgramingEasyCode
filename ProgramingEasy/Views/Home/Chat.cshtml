@model EASY_PROGRAMING_PLATAFORM.Models.Alumnos

@{
    ViewData["Title"] = "Chat";
}
<h2>@ViewData["Title"]</h2>

<style>
    body {
        margin-left: 270px;
    }

    .contenedor {
        background-color: rgba(0,0,0,0.7);
        color: white;
        padding: 15px;
        height: 180px;
        width: 750px;
        border-bottom-left-radius: 30px;
        border-bottom-right-radius: 30px;
    }

    .titulo {
        background-color: greenyellow;
        margin: 0;
        width: 750px;
        height: 90px;
        padding: 38px;
        border-top-left-radius: 30px;
        border-top-right-radius: 30px;
        color: white;
    }



    .lista {
        padding-top: 50px;
        padding-left: 110px;
        padding-right: 30px;
        background-color: rgba(0,0,0,0.7);
        width: 750px;
        height: 250px;
    }

    .lista-container {
        background-color: white;
        border-radius: 20px;
        height: 200px;
        padding: 30px;
        overflow-y: scroll;
    }

    p {
        text-align: center;
    }

    img {
        border-radius: 50px;
    }

    #messageInput {
        background-color: rgba(0,0,0,0.9);
        border-radius: 30px;
        color: white;
        padding: 10px;
        margin: 15px;
        border-color: rgba(0,0,0,0.9);
    }

    #userInput {
        color: black;
        margin: 15px;
    }

    #sendButton {
        color: white;
        background-color: greenyellow;
        padding: 5px;
        border-radius: 5px;
    }
</style>


<div class="container">

    <div class="row">
        &nbsp;
        <div class="titulo">
            <p class="chat">
                Chat <br />
            </p> <img src="~/images/Chat/usuario.jpg" width="80"> Usuario:<input type="text" id="userInput" />
        </div>

    </div>

    <div class="row lista">
        <div class="lista-container">
            <div class="col-6">
                <ul id="messagesList"></ul>
            </div>
        </div>
    </div>

    <div class="row contenedor">
        <div class="col-6">&nbsp;</div>
        <div class="col-6">

            <img src="~/images/Chat/mensaje.jpg" width="50"> Mensaje: <input type="text" id="messageInput" style="width:500px;height:100px" />
            <input type="button" id="sendButton" value="Enviar" />
        </div>
    </div>

</div>
<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>